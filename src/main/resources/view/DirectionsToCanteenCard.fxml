<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="id" fx:id="id" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

   <children>
      <VBox prefHeight="200.0" HBox.hgrow="ALWAYS" nodeOrientation="LEFT_TO_RIGHT">
         <children>
            <ImageView fx:id="iv"  fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="textArea" prefHeight="200.0" HBox.hgrow="ALWAYS" styleClass="label-bright" />
         </children>
      </VBox>
   </children>
</HBox>
