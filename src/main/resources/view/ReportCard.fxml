<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="id" fx:id="id" styleClass="stack-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <VBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" HBox.hgrow="ALWAYS">
            <children>
                <!--  prefHeight here is the height of the scrollbar-->
                <ScrollPane fitToWidth="true" prefHeight="233.0" prefWidth="600" styleClass="stack-pane" stylesheets="@DarkTheme.css">
                    <content>
                        <VBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="436.0" prefWidth="598.0" styleClass="stack-pane">
                            <children>
                                <!--  alternatively use spacing property in vbox -->
                                <Label fx:id="textArea" styleClass="label-bright" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</HBox>
